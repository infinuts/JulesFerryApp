<Window x:Class="JulesFerryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Jules Ferry School App" Height="400" Width="600">
    <Grid Background="#f5f5f5">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Welcome to Jules Ferry School App" FontSize="28" FontWeight="Bold" Foreground="#333" Margin="20"/>
            <Button Content="Login" Click="LoginButton_Click" Width="200" Height="40" Margin="10" Background="#4CAF50" Foreground="White" FontSize="16" BorderBrush="#4CAF50"/>
            <Button Content="Sign Up" Click="SignUpButton_Click" Width="200" Height="40" Margin="10" Background="#2196F3" Foreground="White" FontSize="16" BorderBrush="#2196F3"/>
            <Button Content="Go to Website" Click="GoToWebsiteButton_Click" Width="200" Height="40" Margin="10" Background="#FF5722" Foreground="White" FontSize="16" BorderBrush="#FF5722"/>
        </StackPanel>
    </Grid>
</Window>

