<Window x:Class="JulesFerryApp.ComingSoonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Coming Soon" Height="300" Width="400">
    <Grid Background="#f5f5f5">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Coming Soon" FontSize="28" FontWeight="Bold" Foreground="#333" Margin="20" HorizontalAlignment="Center"/>
            <TextBlock Text="This feature is under development." FontSize="18" Foreground="#555" Margin="10" HorizontalAlignment="Center"/>
            <Button Content="Back to Home" Click="BackButton_Click" Width="200" Height="40" Margin="10" Background="#FF5722" Foreground="White" FontSize="16" BorderBrush="#FF5722"/>
        </StackPanel>
    </Grid>
</Window>

